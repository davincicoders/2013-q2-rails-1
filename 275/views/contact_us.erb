<html>
  <body>
    <h1>Contact Us</h1>

    <% form_tag "/contact_us_post" do %>
      <p>
        Name
        <br>
        <%= text_field_tag "name" %>
      </p>
      <p>
        Email
        <br>
        <%= text_field_tag "email" %>
      </p>
      <p>
        Message
        <br>
        <%= text_area_tag "message" %>
      </p>
      <button>Send</button>
    <% end %>
  </body>
</html>

<html>
  <head>
    <title>Computers Today</title>
  </head>
  <body>
     <h1>Orders</h1>

     <table border="2">
      <tr>
        <th>Order ID</th>
        <th>Customer Name</th>
        <th>Sales Rep Name</th>
        <th>Date Received</th>
        <th>Payment method</th>
        <th colspan=3>Product names</th>
      </tr>
      <% for order in @orders %>
      <tr>
        <td><%= order.id %></td>
        <td><%= "#{order.g197_customer.first_name} #{order.g197_customer.middle_name} #{order.g197_customer.last_name}" %></td>
        <td><%= "#{order.g197_sales_rep.first_name} #{order.g197_sales_rep.middle_name} #{order.g197_sales_rep.last_name}" %></td>
        <td><%= order.date_received %></td>
        <td><%= order.payment_method %></td>
          <% for item in order.g197_order_items %>
        <td><%= item.g197_product.name %></td>
          <% end %>
      </tr>
      <% end %> 
     </table>
  </body>
</html>

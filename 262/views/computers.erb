<html>
  <body>
    <h1>Orders</h1>
    <table border='1'>
      <tr>
        <th>Order id</th>
        <th>Customer Name</th>
        <th>Sale Rep Name</th>
        <th>Date Received</th>
        <th>Payment Method</th>
        <th>Product Name</th>
      </tr>
      <% for order in @orders %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.g197_customer.last_name %></td>
          <td><%= order.g197_sales_rep.last_name %></td>
          <td><%= order.date_received %></td>
          <td><%= order.payment_method %></td>
        	<td>
          <% products = [] %>
          <% p order.g197_order_items.each do %>
          <% products << order_item.g197_product.name %>
          <% end %>
          <%= products.join (", ") %>
          </td>

        </tr>
      <% end %>
    </table>
  </body>
</html>


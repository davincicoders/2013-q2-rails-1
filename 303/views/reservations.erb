<html>
  <head>
  </head>
  <body>
    <% form_tag "/reservations" do %>
      Welcome, <%= @user.username %>
      <button name="logout" value="1">Logout</button>
      <p>
        <h2>
          My current reservation
        </h2>
      </p>
      <% if @car != nil %>
        <ul>
          <li>Car number: <%= @car.id %>
          <li>Color: <%= @car.color %>
          <li>Model: <%= @car.model %>
        </ul>
        <p>
          <button name="return_this_car" value="1">Return this car</button>
        </p>
      <% else %>
        <ul>
          <li> No current reservations
        </ul>
      <% end %>          
      </ul>
      <p>
        <h2>
          List of available cars
        </h2>
      </p>
      <table border="1">
        <tr>
          <th>Number</th>
          <th>Color</th>
          <th>Model</th>
          <th>Available?</th>
          <th>Reserve</th>
        </tr>
        <% for car in @cars %>
          <tr>
            <td><%= car.id %></td>
            <td><%= car.color %></td>
            <td><%= car.model %></td>
            <td><%=
              if car.car_share_member_id?
                "No"
              else
                "Yes"
              end
            %></td>
            <% if !car.car_share_member_id? %>
              <td><button name="reserve_this_car" value="<%= car.id %>">Reserve</button></td>
            <% end %>
          </tr>
        <% end %>
      </table>
    <% end %>
  </body>
</html>

<html>
  <head>
    <style>
      .flash-error { border: 2px red solid; }
    </style>
  </head>
  <body>
  <% if flash[:error] != nil %>
  <div class="flash-error"><%= flash[:error] %></div>
  <% end %>

  <% form_tag("/login") do %>
  <h1>Car Share login</h1>

  <%= label_tag "username", caption: "Enter your username:" %><br>
  <%= text_field_tag "username", id: "username" %>

  <%= label_tag "password", caption: "Enter your password:" %><br>
  <%= password_field_tag "password", id: "password" %>

  <%= submit_tag "login" %>
  <% end %>

  </body>
</html>
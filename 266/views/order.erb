<html>
  <body>
    <h1>Order <%= @order.id %></h1>
    <ul>
      <li>
        <b>Customer:</b>
            <%= @order.g197_customer.first_name %>
            <%= @order.g197_customer.middle_name %>
            <%= @order.g197_customer.last_name %>
      </li>
      <li>
        <b>Sales rep:</b>
            <%= @order.g197_sales_rep.first_name %>
            <%= @order.g197_sales_rep.middle_name %>
            <%= @order.g197_sales_rep.last_name %>
      </li>
      <li>
        <b>Date received:</b>
            <%= @order.date_received %>
      </li>
      <li>
        <b>Payment method:</b>
            <%= @order.payment_method %>
      </li>
      <li>
        <b>Products:</b>
        <ul>
            <% for items in @order.g197_order_items %>
            <%  product = items.g197_product %>
          <li><%= product.name %>
              for
              <%= items.subscription_length %>
              <%= product.issued %>(s)
          </li>
              <% end %>
      </ul>
      <br>
      <br>
      <b><a href=/orders> back </a></b>
  </body>
</html>
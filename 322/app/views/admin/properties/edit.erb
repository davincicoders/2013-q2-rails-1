<% if @property.errors.size > 0 %>
  Errors:
  <ul>
  <% for error in @property.errors.full_messages %>
    <li><%= error %></li>
  <% end %>
  </ul>
<% end %>

<%= form_tag admin_property_path(@property) do %>
  <input type="hidden" name="_method" value="PUT">

    <%= render :partial => "property_form_fields" %>

    <p>
      <button name="update" value="update">Update</button>
    </p>
<% end %>

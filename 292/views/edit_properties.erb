<html>
  <body>

    <% form_tag("/logout") do %>
    <p>You are logged in as <b><%= @user.username %></b>  
    <%= submit_tag "logout" %></p>
    <% end %>
    <hr>

    <h1>List of Properties</h1>
    <table border="1">
      <tr>
        <th>ID #</th>
        <th>Address</th>
        <th>Price</th>
        <th></th>
      </tr>
      <% for property in @properties %>
      <tr>
        <td><%= property.id %></td>
        <td><%= property.address %></td>
        <td><%= property.price %></td>
        <td><a href="/property/<%= property.id %>">Edit</a></td>
      </tr>
      <% end %>
    </table>
  </body>
</html>

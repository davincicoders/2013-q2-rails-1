<html>
  <body>
    <h1>Admin login</h1>
    <% form_tag("/login") do %>
      <p>
      <%= label_tag "username", caption: "Username" %>
      <br>
      <%= text_field_tag "username", id: "username", value: "#{@user.username}" %>
      
      <p>
      <%= label_tag "password", caption: "Password" %>
      <br>
      <%= password_field_tag "password", id: "password", value: "secret" %>
      
      <p>
      <%= submit_tag "login", value: "Login" %>
    <% end %>
  </body>
</html>

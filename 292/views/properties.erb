<html>
  <body>

    <hr>
    <form method="POST" action="/properties">
    <h1>List of Properties</h1>

    <table border="1">
      <tr>
        <th>ID #</th>
        <th>Address</th>
        <th>Price</th>
        <th></th>
      </tr>
      <tr>
        <% @properties.each do |property| %>
        <td><%= property.id %></td>
        <td><%= property.address %></td>
        <td><%= property.price %></td>
        <td>
          <button name="edit" value="<%= property.id %>">Edit</button>
          <button name="delete" value="<%= property.id %>">Delete</button>  
        </td>
      </tr>
      <% end %>
    </table>
      <button name="new" value="new">Add New</button>
    </form>
  </body>
</html>

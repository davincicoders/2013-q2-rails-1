<html>
  <body>
    <form method="POST" action="admin_login.html">
    You are logged in as <b><%= @admin.username %></b>.  <button>Logout</button>
    </form>
    <hr>

    <h1>List of Properties</h1>
    <table border="1">
      <tr>
        <th>ID #</th>
        <th>Address</th>
        <th>Price</th>
        <th></th>
      </tr>
      <% for property in @properties %>
          <tr>
            <td><%= property.id %></td>
            <td><%= property.address %></td>
            <td><%= property.price %></td>
            <td><a href="/properties/<%= property.id %>">Edit</a></td>
          </tr>
      <% end %>
    </table>
  </body>
</html>